@model RealStateApp.Core.Application.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="login-card p-4 shadow rounded">
        <div class="text-center mb-4">
            <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
            <h3 class="mt-3">Welcome Back</h3>
            <p class="text-muted">Please login to your account</p>
        </div>
        @if (Model.HasError)
        {
            <button id="hiddenErrorButton" style="display: none;" onclick="showNotification('danger', '@Model.ErrorMessage')"></button>
        }
        <form asp-controller="Account" asp-action="Index" method="post">   
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
        <hr class="my-4">
        <div class="text-center">
            <p class="mb-0">Don't have an account? <a asp-controller="Account" asp-action="SignUp" class="text-decoration-none">Sign up</a></p>
        </div>
    </div>
</div>

<style>
    .login-card {
        background-color: #ffffff;
        max-width: 400px;
        width: 100%;
    }

    .bi-person-circle {
        font-size: 3rem;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
            const errorButton = document.getElementById('hiddenErrorButton');
            if (errorButton) {
                errorButton.click();
            }
        });
</script>
