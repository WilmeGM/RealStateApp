@using RealStateApp.Core.Application.ViewModels.User
@model List<AdminViewModel>

@{
    ViewData["Title"] = "Administrators";
    var message = TempData["ErrorMessage"] as string;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">Administrators</h1>
        <a asp-action="AddAdmin" asp-controller="Admin" class="btn btn-success">
            <i class="bi bi-person-plus-fill me-2"></i> Add Administrator
        </a>
    </div>
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-danger">@message</div>
    }
    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>IdCard</th>
                <th>Email</th>
                <th>Username</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                for (var i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].IdCard</td>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].UserName</td>
                        <td>
                            @(Model[i].IsActive ? "Active" : "Inactive")
                        </td>
                        <td>
                            <form method="post" asp-controller="Admin" asp-action="ChangeStatus" onsubmit="return confirm(event)">
                                <input type="hidden" name="adminId" value="@Model[i].Id" />
                                <button type="submit" class="@(Model[i].IsActive ? "btn btn-danger" : "btn btn-success")">
                                    @(Model[i].IsActive ? "Deactivate" : "Activate")
                                </button>
                            </form>
                            <a asp-action="UpdateAdmin" asp-controller="Admin" asp-route-adminId="@Model[i].Id" class="btn btn-warning">
                                <i class="bi bi-pencil-square me-2"></i> Edit
                            </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No administrators found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function confirm(e) {
        e.preventDefault();

        Swal.fire({
            title: "Are you sure?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes",
        }).then((result) => {
            if (result.isConfirmed) {
                e.target.closest("form").submit();
            }
        });
    }
</script>


