@model IEnumerable<RealStateApp.Core.Application.ViewModels.User.ImprovementViewModel>

@{
    ViewData["Title"] = "Improvement";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-light">Improvement</h1>
        <a href="@Url.Action("AddImprovement")" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Add Improvement
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Improvement</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var improvement in Model)
                        {
                            <tr>
                                <td class="align-middle">@improvement.Name</td>
                                <td class="align-middle">@improvement.Description</td>
                                <td class="align-middle">
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("UpdateImprovement", new { id = improvement.Id })" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <form action="@Url.Action("DeleteImprovement", new { id = improvement.Id })" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this improvement type?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">No Improvement available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

